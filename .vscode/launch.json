    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Current TS File ",
            "preLaunchTask": "TypeScript-compile",
            "program": "${file}",
            "console": "integratedTerminal",
            "protocol": "inspector", 
            "outFiles": [
              "${fileDirname}/${fileBasenameNoExtension}.js",
              "${workspaceFolder}/bin/**/*.js"
            ]
          }
    ]
}